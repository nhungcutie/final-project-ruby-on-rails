<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Hotel</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to hotels_path, class: button_class(theme: "transparent") do %>
      All Hotels
      <% end %>
      <%= link_to edit_hotel_path(@hotel), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Hotel name:</p>
        <p><%= @hotel.hotel_name %></p>
      </li>
      <li>
        <p class="font-semibold">Area:</p>
        <p><%= @hotel.area.place_code %></p>
      </li>
      <li>
        <p class="font-semibold">Location:</p>
        <p><%= @hotel.location %></p>
      </li>
      <li>
        <p class="font-semibold">No emty room:</p>
        <p><%= @hotel.no_emty_room %></p>
      </li>
  </ul>
</div>
