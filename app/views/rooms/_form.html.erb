<%= form_with(model: room) do |form| %>
<% if room.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% room.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :room_number, class: label_class %>
          <%= form.number_field :room_number, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :hotel_id, class: label_class %>
          <%= form.select :hotel_id, options_from_collection_for_select(Hotel.all, 'id', 'hotel_name', selected = room.hotel_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :no_adult, class: label_class %>
          <%= form.number_field :no_adult, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :no_children, class: label_class %>
          <%= form.number_field :no_children, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price, class: label_class %>
          <%= form.number_field :price, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if room.persisted? %>
<%= link_to "Cancel", room, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", rooms_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
