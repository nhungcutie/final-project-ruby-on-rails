<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Area</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to areas_path, class: button_class(theme: "transparent") do %>
      All Areas
      <% end %>
      <%= link_to edit_area_path(@area), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Place code:</p>
        <p><%= @area.place_code %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @area.description %></p>
      </li>
  </ul>
</div>
